generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
}

model Role {
  slug                        String                        @unique
  privilege                   Int                           @default(20)
  createdAt                   DateTime                      @default(now())
  updatedAt                   DateTime                      @updatedAt
  users                       User[]
  organizationRolePermissions OrganizationRolePermissions[]

  @@map("role")
}

model User {
  id               String         @id @default(cuid())
  email            String         @unique
  username         String         @unique
  stripeCustomerId String?        @unique
  name             String
  provider         String?
  image            String?
  roleSlug         String?
  emailVerified    Boolean        @default(false)
  preferences      String?
  twoFactorEnabled Boolean?       @default(false)
  displayUsername  String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  role             Role?          @relation(fields: [roleSlug], references: [slug])
  accounts         Account[]
  sessions         Session[]
  twoFactors       TwoFactor[]
  notifications    Notification[]
  transactions     Transaction[]
  members          Member[]
  invitations      Invitation[]

  @@map("user")
}

model Notification {
  id          String     @id @default(cuid())
  userId      String
  title       String
  message     String
  type        String
  link        String?
  sent        DateTime?
  emailSentId String?
  read        Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  emailSent   EmailSent? @relation(fields: [emailSentId], references: [id])
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("notification")
}

model EmailSent {
  id            String         @id @default(cuid())
  to            String
  subject       String
  body          String
  sentAt        DateTime       @default(now())
  notifications Notification[]

  @@map("email_sent")
}

model EmailBodyTemplate {
  id        String   @id @default(cuid())
  name      String   @unique
  subject   String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("email_body_template")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  providerId            String
  accountId             String
  password              String?
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Jwks {
  id         String    @id @default(cuid())
  publicKey  String
  privateKey String
  createdAt  DateTime  @default(now())
  expiresAt  DateTime?

  @@map("jwks")
}

model TwoFactor {
  id          String   @id @default(cuid())
  secret      String
  backupCodes String
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([secret])
  @@index([userId])
  @@map("twoFactor")
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  INCOMPLETE
  TRIALING
  INCOMPLETE_EXPIRED
  UNPAID
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum PriceInterval {
  DAY
  WEEK
  MONTH
  YEAR
}

model Product {
  id              String         @id @default(cuid())
  name            String
  description     String?
  features        String[]       @default([])
  permissions     Json
  active          Boolean        @default(true)
  archived        Boolean        @default(false)
  stripeProductId String?        @unique
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  prices          ProductPrice[]
  subscriptions   Subscription[]

  @@index([id])
  @@map("product")
}

model ProductPrice {
  id            String        @id @default(cuid())
  productId     String
  intervalValue Int           @default(1)
  amount        Float
  stripePriceId String?       @unique
  active        Boolean       @default(true)
  archived      Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  currencyCode  String
  intervalType  PriceInterval @default(MONTH)
  product       Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  currency      Currency      @relation(fields: [currencyCode], references: [code])

  @@index([productId])
  @@map("product_price")
}

model Coupon {
  id             String       @id @default(cuid())
  code           String       @unique
  value          Float
  expiresAt      DateTime?
  usageLimit     Int?
  usageCount     Int          @default(0)
  active         Boolean      @default(true)
  stripeCouponId String?      @unique
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  discountType   DiscountType

  @@index([code])
  @@map("coupon")
}

model Currency {
  code          String         @unique
  name          String
  productPrices ProductPrice[]
  transactions  Transaction[]
}

model Transaction {
  id                    String   @id @default(cuid())
  userId                String?
  amount                Float
  status                String
  currencyCode          String
  paymentMethod         String?
  stripePaymentIntentId String?  @unique
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  currency              Currency @relation(fields: [currencyCode], references: [code])

  @@index([userId])
  @@map("transaction")
}

model Subscription {
  id                   String             @id @default(cuid())
  organizationId       String
  productId            String
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAtPeriodEnd    Boolean            @default(false)
  stripeSubscriptionId String?            @unique
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  organization         Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  product              Product            @relation(fields: [productId], references: [id])
  status               SubscriptionStatus @default(INCOMPLETE)

  @@index([organizationId])
  @@index([productId])
  @@map("subscription")
}

model Organization {
  id                          String                        @id @default(cuid())
  name                        String
  slug                        String?                       @unique
  logo                        String?
  createdAt                   DateTime                      @default(now())
  updatedAt                   DateTime                      @updatedAt
  metadata                    String?
  members                     Member[]
  invitations                 Invitation[]
  organizationRolePermissions OrganizationRolePermissions[]
  subscriptions               Subscription[]

  @@map("organization")
}

model OrganizationRolePermissions {
  organizationId String
  roleSlug       String
  permissions    Json
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role           Role         @relation(fields: [roleSlug], references: [slug])

  @@id([organizationId, roleSlug])
  @@map("organization_role_permissions")
}

model Member {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  role           String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([organizationId, userId])
  @@map("member")
}

model Invitation {
  id             String       @id @default(cuid())
  organizationId String
  email          String
  role           String
  status         String       @default("pending")
  expiresAt      DateTime
  inviterId      String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  inviter        User         @relation(fields: [inviterId], references: [id], onDelete: Cascade)

  @@unique([organizationId, email])
  @@index([organizationId, email])
  @@map("invitation")
}
